{
  "name": "pi-telegram-agent-stack",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm --workspace packages/contracts run build && npm --workspace apps/orchestrator run build && npm --workspace apps/vm-worker run build && npm --workspace apps/telegram-gateway run build",
    "test": "npm --workspace apps/telegram-gateway run test && npm --workspace apps/vm-worker run test",
    "test:gateway": "npm --workspace apps/telegram-gateway run test",
    "test:worker": "npm --workspace apps/vm-worker run test",
    "butler": "node bin/butler.mjs",
    "pi-self": "node bin/pi-self.mjs",
    "up": "node bin/butler.mjs up",
    "doctor": "node bin/butler.mjs doctor",
    "harness:check": "node bin/check-agent-harness.mjs",
    "verify:harness": "npm run harness:check && npm run build",
    "dev:orchestrator": "npm --workspace apps/orchestrator run dev",
    "dev:worker": "npm --workspace apps/vm-worker run dev",
    "dev:gateway": "npm --workspace apps/telegram-gateway run dev"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "commander": "^13.1.0",
    "dotenv": "^16.5.0",
    "mcporter": "0.7.3"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
