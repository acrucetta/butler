TELEGRAM_BOT_TOKEN=<botfather-token>
ORCH_BASE_URL=http://127.0.0.1:8787

# Required. Must match orchestrator and be 16+ chars.
ORCH_GATEWAY_TOKEN=replace-with-strong-secret

# Required. Telegram user IDs that can manage pairing + panic + approvals.
TG_OWNER_IDS=<your-telegram-user-id>

# Optional extra pre-allowed users (comma-separated ids)
TG_ALLOW_FROM=
TG_PAIRINGS_FILE=.data/gateway/pairings.json
TG_JOB_POLL_MS=2000

# Hardening / behavior
TG_RATE_LIMIT_PER_MIN=12
TG_PROMPT_MAX_CHARS=8000
TG_RUN_OWNER_ONLY=true
TG_APPROVE_OWNER_ONLY=true
TG_ALLOW_REQUESTER_ABORT=true
TG_NOTIFY_TOOL_EVENTS=false
