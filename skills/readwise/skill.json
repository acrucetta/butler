{
  "id": "readwise",
  "name": "Readwise",
  "description": "Fetch highlights, notes, and review summaries.",
  "tags": ["readwise", "notes", "highlights", "learning"],
  "env": [
    "ACCESS_TOKEN"
  ],
  "tools": {
    "mcpServers": {
      "readwise": {
        "description": "Official Readwise MCP server",
        "command": "npx",
        "args": [
          "-y",
          "@readwise/readwise-mcp"
        ]
      }
    },
    "targets": [
      {
        "name": "readwise",
        "selector": "readwise",
        "emitTypes": true,
        "timeoutMs": 120000
      }
    ]
  }
}
